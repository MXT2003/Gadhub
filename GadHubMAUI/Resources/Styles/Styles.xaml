<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors - Light Pink Theme -->
    <Color x:Key="Primary">#FFC0CB</Color>
    <Color x:Key="Secondary">#FFB6C1</Color>
    <Color x:Key="Tertiary">#FF69B4</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray50">#FFF0F5</Color>
    <Color x:Key="Gray100">#FFE4E1</Color>
    <Color x:Key="Gray200">#FFDAB9</Color>
    <Color x:Key="Gray300">#FFC0CB</Color>
    <Color x:Key="Gray400">#FFB6C1</Color>
    <Color x:Key="Gray500">#FFA07A</Color>
    <Color x:Key="Gray600">#FF8C69</Color>
    <Color x:Key="Gray700">#FF7F50</Color>
    <Color x:Key="Gray800">#FF6347</Color>
    <Color x:Key="Gray900">#FF4500</Color>
    <Color x:Key="Success">#98FB98</Color>
    <Color x:Key="Warning">#FFD700</Color>
    <Color x:Key="Error">#FF6B6B</Color>
    <Color x:Key="Info">#87CEEB</Color>
    <Color x:Key="Magenta">#FF69B4</Color>
    <Color x:Key="LightPink">#FFC0CB</Color>
    <Color x:Key="PinkAccent">#FFB6C1</Color>
    <Color x:Key="SoftPink">#FFF0F5</Color>

    <!-- Global text color for all labels and spans -->
    <Style TargetType="Label" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
    </Style>
    <Style TargetType="Span" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
    </Style>

    <!-- ActivityIndicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

    <!-- IndicatorView -->
    <Style TargetType="IndicatorView">
        <Setter Property="IndicatorColor" Value="{StaticResource Gray300}"/>
        <Setter Property="SelectedIndicatorColor" Value="{StaticResource Primary}"/>
    </Style>

    <!-- Border -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource PinkAccent}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="BackgroundColor" Value="{StaticResource SoftPink}" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- BoxView -->
    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
    </Style>

    <!-- Button -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="MinimumWidthRequest" Value="48"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource Gray500}" />
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray300}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver" />
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}" />
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- DatePicker -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Editor -->
    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Entry -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SoftPink}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <!-- ImageButton -->
    <Style TargetType="ImageButton">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Headline -->
    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,10" />
    </Style>

    <!-- SubHeadline -->
    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- CollectionView -->
    <Style TargetType="CollectionView">
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="SelectionMode" Value="None" />
    </Style>

    <!-- ListView -->
    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{StaticResource PinkAccent}" />
        <Setter Property="RefreshControlColor" Value="{StaticResource Black}" />
    </Style>

    <!-- Picker -->
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="TitleColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- ProgressBar -->
    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}" />
    </Style>

    <!-- RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- RefreshView -->
    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor" Value="{StaticResource Black}" />
    </Style>

    <!-- SearchBar -->
    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource Gray500}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SoftPink}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- SearchHandler -->
    <Style TargetType="SearchHandler">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Shadow -->
    <Style TargetType="Shadow">
        <Setter Property="Radius" Value="15" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Brush" Value="{StaticResource White}" />
        <Setter Property="Offset" Value="10,10" />
    </Style>

    <!-- Slider -->
    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource Primary}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource Gray300}" />
        <Setter Property="ThumbColor" Value="{StaticResource Primary}" />
    </Style>

    <!-- SwipeItem -->
    <Style TargetType="SwipeItem">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
    </Style>

    <!-- Switch -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary}" />
        <Setter Property="ThumbColor" Value="{StaticResource White}" />
    </Style>

    <!-- TimePicker -->
    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Page -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource LightPink}" />
    </Style>

    <!-- Shell -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource LightPink}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource Gray500}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource Gray500}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource SoftPink}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Black}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Gray500}" />
        <Setter Property="Shell.FlyoutBackgroundColor" Value="{StaticResource SoftPink}" />
    </Style>

    <!-- NavigationPage -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource LightPink}" />
        <Setter Property="BarTextColor" Value="{StaticResource Black}" />
        <Setter Property="IconColor" Value="{StaticResource Black}" />
    </Style>

    <!-- TabbedPage -->
    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource SoftPink}" />
        <Setter Property="BarTextColor" Value="{StaticResource Black}" />
        <Setter Property="UnselectedTabColor" Value="{StaticResource Gray500}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource Black}" />
    </Style>

</ResourceDictionary>
