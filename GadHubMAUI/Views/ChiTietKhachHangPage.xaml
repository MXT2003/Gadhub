<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GadHubMAUI.Views.ChiTietKhachHangPage"
             Title="Chi tiết khách hàng">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Thông tin khách hàng -->
            <Border StrokeShape="RoundRectangle 75,75,75,75"
                    StrokeThickness="1"
                    Stroke="LightGray"
                    WidthRequest="150"
                    HeightRequest="150"
                    HorizontalOptions="Center"
                    Margin="0,10,0,20"
                    BackgroundColor="#E0E0E0">
                <Label x:Name="lblInitials"
                       FontSize="60"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>

            <!-- Thông tin cơ bản -->
            <Frame BorderColor="LightGray"
                   CornerRadius="10"
                   Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Text="Mã khách hàng:"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center" />
                        <Label x:Name="lblMaKH"
                               Grid.Column="1"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Text="Tên khách hàng:"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center" />
                        <Label x:Name="lblTenKH"
                               Grid.Column="1"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Text="Số điện thoại:"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center" />
                        <Label x:Name="lblSDT"
                               Grid.Column="1"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Text="Địa chỉ:"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center" />
                        <Label x:Name="lblDiaChi"
                               Grid.Column="1"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Lịch sử mua hàng -->
            <Frame BorderColor="LightGray"
                   CornerRadius="10"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Lịch sử mua hàng"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="Black" />
                    <CollectionView x:Name="cvLichSuMuaHang"
                                    HeightRequest="250"
                                    EmptyView="Khách hàng chưa có đơn hàng nào">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5" ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding MaHD}"
                                           TextColor="Black"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding NgayLap, StringFormat='{0:dd/MM/yyyy}'}"
                                           Margin="10,0"
                                           TextColor="Black"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="2"
                                           Text="{Binding GiaTien, StringFormat='{0:#,##0} VNĐ'}"
                                           TextColor="Black"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Nút chức năng -->
            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="15"
                  Margin="0,10,0,0">
                <Button Text="Sửa thông tin"
                        Grid.Column="0"
                        BackgroundColor="#2196F3"
                        Clicked="btnSua_Clicked" />
                <Button Text="Xóa khách hàng"
                        Grid.Column="1"
                        BackgroundColor="#F44336"
                        Clicked="btnXoa_Clicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
