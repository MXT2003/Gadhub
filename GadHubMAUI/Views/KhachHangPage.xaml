<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GadHubMAUI.Views.KhachHangPage"
             Title="Khách hàng"
             BackgroundColor="White">
    <Grid RowDefinitions="Auto,*"
          Padding="25">

        <!-- Search and Add -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,15">
            <Border Grid.Column="0"
                   Padding="5,0"
                   Stroke="{StaticResource Gray200}"
                   BackgroundColor="White"
                   StrokeShape="RoundRectangle 15"
                   StrokeThickness="1">
                <SearchBar x:Name="searchBar"
                           Placeholder="Tìm kiếm khách hàng..."
                           SearchButtonPressed="searchBar_SearchButtonPressed"
                           TextChanged="searchBar_TextChanged"
                           BackgroundColor="Transparent"
                           FontSize="16" />
            </Border>
            <Button Grid.Column="1"
                    Text="+"
                    FontSize="22"
                    FontAttributes="Bold"
                    WidthRequest="55"
                    HeightRequest="55"
                    CornerRadius="15"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Clicked="btnThem_Clicked"
                    Margin="10,0,0,0" />
        </Grid>

        <!-- Customer List -->
        <CollectionView x:Name="cvKhachHang"
                        Grid.Row="1"
                        EmptyView="Không có khách hàng nào"
                        Margin="0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                                    <Border Stroke="{StaticResource Gray200}"
                       StrokeShape="RoundRectangle 15"
                       StrokeThickness="1"
                       BackgroundColor="White"
                       Padding="18"
                       Margin="0,8">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="{Binding MaKH}"
                                                  Tapped="KhachHang_Tapped" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                   WidthRequest="45"
                                   HeightRequest="45"
                                   StrokeShape="RoundRectangle 22.5"
                                   BackgroundColor="{StaticResource Gray100}"
                                   Padding="0"
                                   StrokeThickness="0">
                                <Label Text="{Binding TenKH, Converter={StaticResource InitialsConverter}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label Text="{Binding TenKH}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{StaticResource Black}" />
                                <Label Text="{Binding SDT}"
                                       TextColor="{StaticResource Primary}"
                                       FontSize="15" />
                                <Label Text="{Binding DiaChi}"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="14"
                                       LineBreakMode="TailTruncation" />
                            </VerticalStackLayout>
                            <Button Grid.Column="2"
                                    Text="SỬA"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    HeightRequest="40"
                                    WidthRequest="70"
                                    Padding="0"
                                    CornerRadius="10"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    CommandParameter="{Binding MaKH}"
                                    Clicked="btnSua_Clicked" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>