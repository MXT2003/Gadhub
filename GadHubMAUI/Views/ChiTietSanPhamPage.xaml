<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GadHubMAUI.Views.ChiTietSanPhamPage"
             Title="Chi tiết sản phẩm"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">
            <!-- Hình ảnh sản phẩm -->
            <Frame BorderColor="LightGray"
                   CornerRadius="15"
                   Padding="10"
                   HasShadow="True"
                   BackgroundColor="White"
                   HeightRequest="280"
                   HorizontalOptions="Fill">
                <Image x:Name="imgSanPham"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Thông tin cơ bản -->
            <VerticalStackLayout Spacing="8">
                <Label x:Name="lblTenSP"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="Black" />
                <Label x:Name="lblDonGia"
                       FontSize="22"
                       TextColor="Black"
                       FontAttributes="Bold" />
                <Label x:Name="lblLoaiSP"
                       FontSize="18"
                       TextColor="Black"
                       Margin="0,5,0,0" />
            </VerticalStackLayout>

            <!-- Số lượng tồn -->
            <Frame BorderColor="LightGray"
                   CornerRadius="15"
                   Padding="18"
                   HasShadow="True"
                   BackgroundColor="White">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Số lượng tồn kho:"
                           FontSize="16"
                           TextColor="Black"
                           VerticalOptions="Center" />
                    <Label x:Name="lblSoLuongTon"
                           Grid.Column="1"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"
                           VerticalOptions="Center" />
                </Grid>
            </Frame>

            <!-- Mô tả sản phẩm -->
            <Frame BorderColor="LightGray"
                   CornerRadius="15"
                   Padding="18"
                   HasShadow="True"
                   BackgroundColor="White">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Mô tả sản phẩm"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="Black" />
                    <Label x:Name="lblMoTa"
                           TextType="Html"
                           FontSize="16"
                           TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <!-- Nút chức năng -->
            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="20"
                  Margin="0,15,0,0">
                <Button Text="SỬA THÔNG TIN"
                        Grid.Column="0"
                        BackgroundColor="Black"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="55"
                        CornerRadius="10"
                        Clicked="btnSua_Clicked" />
                <Button Text="XÓA SẢN PHẨM"
                        Grid.Column="1"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="55"
                        CornerRadius="10"
                        Clicked="btnXoa_Clicked" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
